<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:property-placeholder location="bouquet.properties,db.properties" />

    <import resource="application-context-test.xml"/>

    <!-- DAO -->

    <bean id="bouquetDAO" class="com.flowergarden.dao.BouquetDAO">
        <constructor-arg name="dataSource" ref="dataSource"/>
        <constructor-arg name="schemaName" value="${db.schema}"/>
        <constructor-arg name="tableName" value="${db.tables.bouquet}"/>
    </bean>

    <bean id="flowerDAO" class="com.flowergarden.dao.FlowerDAO">
        <constructor-arg name="dataSource" ref="dataSource"/>
        <constructor-arg name="schemaName" value="${db.schema}"/>
        <constructor-arg name="tableName" value="${db.tables.flower}"/>
    </bean>


    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.sqlite.JDBC" />
        <property name="url" ref="url" />
    </bean>

    <bean id="file" class="java.io.File">
        <constructor-arg value="${db.name}"/>
    </bean>

    <bean id="canonicalPath"
          class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject" ref="file" />
        <property name="targetMethod" value="getCanonicalFile" />
    </bean>

    <bean id="fileURIPath"
          class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject" ref="canonicalPath" />
        <property name="targetMethod" value="toURI" />
    </bean>

    <bean id="fileURIPathToString"
          class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject" ref="fileURIPath" />
        <property name="targetMethod" value="toString" />
    </bean>

    <bean id="url"
          class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject" ref="dbURL" />
        <property name="targetMethod" value="concat" />
        <property name="arguments" ref="fileURIPathToString"/>
    </bean>

    <bean id="dbURL" class="java.lang.String">
        <constructor-arg value="${db.url}"/>
    </bean>

</beans>